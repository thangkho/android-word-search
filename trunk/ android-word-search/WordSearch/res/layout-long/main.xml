<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:padding="30dip" android:orientation="horizontal" android:layout_height="match_parent">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_gravity="center" android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical" android:gravity="center">
        <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:clickable="true" android:id="@+id/btnNewGame" android:text="@string/new_game"></Button>
        <Button android:clickable="true" android:id="@+id/btnAbout" android:text="@string/about" android:layout_height="wrap_content" android:layout_width="match_parent"></Button>
        <Button android:clickable="true" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/btnExit" android:text="@string/exit"></Button>
    </LinearLayout>
</LinearLayout>
